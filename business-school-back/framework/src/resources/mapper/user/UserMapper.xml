    <select id="selectUserByUsername" parameterType="java.lang.String"
            resultType="com.business.framework.user.po.User">
        select
           id, username, password, phone, age,
           nickname, sex, enabled, description, create_time, update_time
        from
            user
        where
            username = #{value}
